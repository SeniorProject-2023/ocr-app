<Page
    x:Class="OCRApp.TextScreenPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OCRApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <StackPanel Spacing="20" Margin="100">
        <FlipView x:Name="OCR_Results" Width="480" Height="270" BorderBrush="Black" BorderThickness="1" 
                  ItemsSource="{x:Bind Path=VM.OcrResults}">
            <FlipView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <TextBox AcceptsReturn="True" TextWrapping="Wrap" MaxHeight="1000" Width="1000"
                                 Header="OCR Result" ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 Text="{Binding  }" />
                    </Grid>
                </DataTemplate>
            </FlipView.ItemTemplate>
        </FlipView>
        <Button Content = "Save Results"    HorizontalAlignment="Center"/>
    </StackPanel>
</Page>

