<Page
    x:Class="OCRApp.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OCRApp.Presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Margin="50">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <FlipView ItemsSource="{x:Bind VM.ImagesToScan}" SelectedIndex="{x:Bind VM.SelectedIndex, Mode=TwoWay}" x:Name="flipView" Background="Transparent" Grid.Row="0" Margin="0, 0, 0, 10">
            <FlipView.ItemTemplate>
                <DataTemplate x:DataType="local:ImageWrapper">
                    <Grid>
                        <Image Source="{x:Bind Image}" />
                    </Grid>
                </DataTemplate>
            </FlipView.ItemTemplate>
        </FlipView>

        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Disabled"
                      VerticalScrollMode="Disabled"
                      HorizontalScrollBarVisibility="Auto">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
                <Button Content="Delete current image" x:Name="DeleteCurrentImageButton" Click="DeleteCurrentImageButton_Click" />
                <Button Content="Move current image to left" x:Name="MoveCurrentImageToLeftButton" Click="MoveCurrentImageToLeftButton_Click" />
                <Button Content="Move current image to right" x:Name="MoveCurrentImageToRightButton" Click="MoveCurrentImageToRightButton_Click" />
            </StackPanel>
        </ScrollViewer>

        <ScrollViewer Grid.Row="2"
                      VerticalScrollBarVisibility="Disabled"
                      VerticalScrollMode="Disabled"
                      HorizontalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{x:Bind VM.ImagesToScan, Mode=OneWay}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" Height="50" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="local:ImageWrapper">
                        <Grid>
                            <Image Width="50" Height="50" Source="{x:Bind Image}" />
                            <Border Width="50" Height="50" BorderThickness="2" BorderBrush="{ThemeResource SystemColorHighlightColor}" Visibility="{x:Bind Visibility, Mode=OneWay}" />
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
